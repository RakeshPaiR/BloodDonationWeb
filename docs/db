CREATE TABLE volunteers( 
    id INT NOT NULL PRIMARY KEY,
    email VARCHAR(30) NOT NULL, 
    bg VARCHAR(3) NOT NULL, 
    pin VARCHAR(6) NOT NULL, 
    name VARCHAR(30) NOT NULL, 
    pwd VARCHAR(32) NOT NULL, 
    mobile VARCHAR(10), 
    addr1 VARCHAR(30), 
    addr2 VARCHAR(30), 
    city VARCHAR(20), 
    dob DATE NOT NULL, 
    lbd DATE);